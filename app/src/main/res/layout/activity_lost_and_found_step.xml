<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lostAndFoundStep">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="유실물 처리 절차"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/first"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="유실물 습득"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:background="@drawable/circleborder"
        />


    <TextView
        android:id="@+id/firstExplain"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        android:text="역무원, 승무원, 고객"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/first"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:src="@drawable/arrow"
        app:layout_constraintTop_toBottomOf="@+id/first"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/middleExplain"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="본인 미 인도 시 유실물 센터 인계"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintLeft_toRightOf="@+id/arrow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstExplain"
        android:gravity="center"/>

    <TextView
        android:id="@+id/secondStep"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginLeft="156dp"
        android:background="@drawable/circleborder"
        android:gravity="center"
        android:text="역"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrow" />
    <ImageView
        android:id="@+id/secondArrow"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:src="@drawable/arrow"
        app:layout_constraintTop_toBottomOf="@+id/first"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/secondExplain"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        android:text="유실물 접수, 본인 연락 및 인도"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/secondStep"
        app:layout_constraintTop_toBottomOf="@id/middleExplain"/>

    <ImageView
        android:id="@+id/thirdArrow"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginLeft="156dp"
        android:src="@drawable/arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondStep" />

    <TextView
        android:id="@+id/thirdStep"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginLeft="156dp"
        android:background="@drawable/circleborder"
        android:gravity="center"
        android:text="유실물 센터"
        app:layout_constraintTop_toBottomOf="@id/thirdArrow"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/thirdExplain"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="1~7일간 보관, 고객 인도"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/thirdStep"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondExplain" />

    <ImageView
        android:id="@+id/fourthArrow"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginLeft="156dp"
        android:src="@drawable/arrow"
        app:layout_constraintTop_toBottomOf="@id/thirdStep"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/middleSecondExplain"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="본인 미 인도 시 유실물 센터 인계"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/thirdArrow"
        app:layout_constraintTop_toBottomOf="@id/thirdExplain"
        android:gravity="center"/>

    <TextView
        android:id="@+id/fourthStep"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginLeft="156dp"
        android:background="@drawable/circleborder"
        android:gravity="center"
        android:text="경찰서"
        app:layout_constraintTop_toBottomOf="@id/fourthArrow"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/fourthExplain"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="6개월간 보관"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/fourthStep"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/middleSecondExplain" />

    <ImageView
        android:id="@+id/fifthArrow"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginLeft="156dp"
        android:src="@drawable/arrow"
        app:layout_constraintTop_toBottomOf="@id/fourthStep"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/fifthStep"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginLeft="156dp"
        android:background="@drawable/circleborder"
        android:gravity="center"
        android:text="국고 귀속"
        app:layout_constraintTop_toBottomOf="@id/fifthArrow"
        app:layout_constraintLeft_toLeftOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>