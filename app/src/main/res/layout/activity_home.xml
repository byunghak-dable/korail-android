<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!--    Header-->
    <TextView
        android:id="@+id/headerTV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main"
        android:gravity="center|start"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="앱 이름"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/culturalFacilitiesIB"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/shape_rounded_btn"
        android:backgroundTint="@color/homeBtn"
        app:layout_constraintBottom_toTopOf="@id/culturalFacilitiesTV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/lostAndFoundIB"
        app:layout_constraintTop_toBottomOf="@id/headerTV" />

    <TextView
        android:id="@+id/culturalFacilitiesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="문화시설"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/lostAndFoundTV"
        app:layout_constraintLeft_toLeftOf="@id/culturalFacilitiesIB"
        app:layout_constraintRight_toRightOf="@id/culturalFacilitiesIB"
        app:layout_constraintTop_toBottomOf="@id/culturalFacilitiesIB" />

    <ImageButton
        android:id="@+id/lostAndFoundIB"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/shape_rounded_btn"
        android:backgroundTint="@color/homeBtn"
        app:layout_constraintBottom_toTopOf="@id/lostAndFoundTV"
        app:layout_constraintLeft_toRightOf="@id/culturalFacilitiesIB"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerTV" />

    <TextView
        android:id="@+id/lostAndFoundTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="유실물 도우미"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/culturalFacilitiesTV"
        app:layout_constraintLeft_toLeftOf="@id/lostAndFoundIB"
        app:layout_constraintRight_toRightOf="@id/lostAndFoundIB"
        app:layout_constraintTop_toBottomOf="@id/lostAndFoundIB" />

    <ImageButton
        android:id="@+id/eventIB"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_rounded_btn"
        android:backgroundTint="@color/homeBtn"
        app:layout_constraintBottom_toTopOf="@id/chatTV"
        app:layout_constraintLeft_toLeftOf="@id/culturalFacilitiesIB"
        app:layout_constraintRight_toRightOf="@id/culturalFacilitiesIB"
        app:layout_constraintTop_toBottomOf="@id/culturalFacilitiesTV" />

    <TextView
        android:id="@+id/eventIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="지하철 공연"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/eventIB"
        app:layout_constraintRight_toRightOf="@id/eventIB"
        app:layout_constraintTop_toBottomOf="@id/eventIB" />

    <ImageButton
        android:id="@+id/chatIB"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_rounded_btn"
        android:backgroundTint="@color/homeBtn"
        app:layout_constraintBottom_toTopOf="@id/chatTV"
        app:layout_constraintLeft_toLeftOf="@id/lostAndFoundIB"
        app:layout_constraintRight_toRightOf="@id/lostAndFoundIB"
        app:layout_constraintTop_toBottomOf="@id/lostAndFoundTV" />

    <TextView
        android:id="@+id/chatTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="오픈 채팅"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/chatIB"
        app:layout_constraintRight_toRightOf="@id/chatIB"
        app:layout_constraintTop_toBottomOf="@id/chatIB" />

</androidx.constraintlayout.widget.ConstraintLayout>